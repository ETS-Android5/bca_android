<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BCa_alter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightblue_A700</item>
        <item name="colorPrimaryVariant">@color/lightblue_A400</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bluegray_200</item>
        <item name="colorSecondaryVariant">@color/bluegray_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>

        <!-- Set font. -->
        <item name="android:fontFamily">@font/spoqa_han_sans_neo</item>
        <item name="fontFamily">@font/spoqa_han_sans_neo</item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->

        <!-- Set activity transform animation -->
        <item name="android:windowAnimationStyle">@style/activityHorizontalAnimation</item>

        <!-- Set windowContentTransitions to true for the cardDetailView -->
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="activityHorizontalAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="Theme.BCa_alter.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BCa_alter.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BCa_alter.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>