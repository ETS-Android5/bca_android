<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <padding android:bottom="2dp" android:left="2dp" android:right="2dp"
                android:top="2dp"/>
            <solid android:color="#00CCCCCC"/>
        </shape>
    </item>
    <item>
        <shape>
            <padding android:bottom="2dp" android:left="2dp" android:right="2dp"
                android:top="2dp"/>
