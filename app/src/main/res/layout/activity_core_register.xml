<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:gravity="bottom">

            <EditText
                android:id="@+id/ac_coreRegister_emailField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="textEmailAddress"
                android:hint="이메일" />

            <EditText
                android:id="@+id/ac_coreRegister_idField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="text"
                android:hint="아이디" />

            <EditText
                android:id="@+id/ac_coreRegister_nameField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="text"
                android:hint="이름" />

            <EditText
                android:id="@+id/ac_coreRegister_passwordField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="textPassword"
                android:hint="비밀번호" />

            <EditText
                android:id="@+id/ac_coreRegister_passwordCheckField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="textPassword"
                android:hint="비밀번호 확인" />

            <Button
                android:id="@+id/ac_coreRegister_registerBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="회원가입" />

            <Button
                android:id="@+id/ac_coreRegister_goLoginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lightblue_900"
                android:text="로그인으로 이동" />
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

