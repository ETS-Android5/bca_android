<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="225dp"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <LinearLayout
        android:id="@+id/li_cardListBig_cardImageViewContainer"
        android:layout_width="356dp"
        android:layout_height="356dp"
        android:gravity="center"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >

        <ImageButton
            android:id="@+id/li_cardListBig_cardImageBtn"
            android:layout_width="356dp"
            android:layout_height="225dp"
            android:scaleType="fitXY"
            android:rotation="90"
            android:transitionName="card"

            android:backgroundTint="@color/transparent"
            android:src="@drawable/card_test" />
    </LinearLayout>

    <TextView
        android:id="@+id/li_cardListBig_cardNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"

        app:layout_constraintTop_toBottomOf="@id/li_cardListBig_cardImageViewContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:textAlignment="center"
        android:textSize="20sp"
        android:text="CARD_NAME"
        />

</androidx.constraintlayout.widget.ConstraintLayout>