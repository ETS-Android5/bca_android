<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="2dp" >

    <TextView
        android:id="@+id/li_chatRoomMessageBubble_messageBodyText"
        android:background="@drawable/box_round_chatroom_messagebubble_mine_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:maxWidth="240dp"
        tools:text="@string/lorem_ipsum"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/li_chatRoomMessageBubble_messageTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/li_chatRoomMessageBubble_messageBodyText"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:paddingHorizontal="4dp"
        tools:text="오후 3시 45분"
        android:textSize="10sp" />
</androidx.constraintlayout.widget.ConstraintLayout>